{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["scripts/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}